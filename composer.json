{
    "name": "lovers-of-behat/screenshot-extension",
    "description": "Behat extension to take screenshots of failed steps",
    "type": "behat-extension",
    "require": {
        "behat/behat": "^3.4",
        "php": "~7.1",
        "symfony/dependency-injection": "^2.1|^3.0|^4.0",
        "symfony/event-dispatcher": "^2.0|^3.0|^4.0"
    },
    "license": ["MIT"],
    "authors": [
        {
            "name": "Pieter Frenssen",
            "email": "pieter@frenssen.be"
        }
    ],
    "autoload": {
        "psr-4": {
            "LoversOfBehat\\ScreenshotExtension\\": "src"
        }
    },
    "require-dev": {
        "behat/mink-goutte-driver": "^1.2",
        "squizlabs/php_codesniffer": "^3.2"
    }
}
